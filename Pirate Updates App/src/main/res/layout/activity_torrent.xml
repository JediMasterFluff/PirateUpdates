<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_torrent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.applications.fluffy.piratingupdates.Activities.TorrentActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:rowCount="3"
        app:orientation="vertical"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:id="@+id/torrent_poster"
            app:layout_column="0"
            app:layout_row="0"
            android:contentDescription="@string/torrent_image_poster_here"
            />

        <TableLayout
            android:id="@+id/torrent_detail_table"
            android:layout_width="179dp"
            android:layout_height="250dp"
            app:layout_column="1"
            app:layout_row="0"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="20px"
            android:paddingTop="30px">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:id="@+id/imdbRating"
                    tools:ignore="RtlHardcoded" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genre" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:id="@+id/genre"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/runtime" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:id="@+id/runtime"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:id="@+id/size"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publication_date" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:id="@+id/pubdate"/>
            </TableRow>
        </TableLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:inputType="none"
            app:layout_row="1"
            app:layout_columnSpan="2"
            app:layout_column="0"
            android:id="@+id/torrent_desc"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/desc"/>

        <Button
            android:text="@string/download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/torrent_download"
            app:layout_row="2"
            app:layout_columnSpan="2"
            app:layout_column="0"/>

    </android.support.v7.widget.GridLayout>
</RelativeLayout>
